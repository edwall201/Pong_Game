module pong_renderer(x,
				y,
				ball_x,
				ball_y,
				paddleL_y,
				paddleL_y,
				out_color);

input [9:0] x;
input [9:0] y;
input [9:0] ball_x;
input [9:0] ball_y;
input [9:0] paddleL_y;
input [9:0] paddleR_y;
output reg [23:0] out_color;
	
localparam BALL_SIZE      = 10;
localparam PADDLE_WIDTH   = 10;
localparam PADDLE_HEIGHT  = 60;
localparam PADDLE_L_X     = 20;
localparam PADDLE_R_X     = 610;

always @(*) begin
	// default background = black
	out_color = 24'h000000;

	// ball
	if (x >= ball_x && x < ball_x + BALL_SIZE &&
		y >= ball_y && y < ball_y + BALL_SIZE)
		out_color = 24'hFFFFFF;

	// left paddle
	else if (x >= PADDLE_L_X && x < PADDLE_L_X + PADDLE_WIDTH &&
		y >= paddleL_y && y < paddleL_y + PADDLE_HEIGHT)
		out_color = 24'hFFFFFF;

	// right paddle
	else if (x >= PADDLE_R_X && x < PADDLE_R_X + PADDLE_WIDTH &&
      y >= paddleR_y && y < paddleR_y + PADDLE_HEIGHT)
      out_color = 24'hFFFFFF;
end

endmodule;